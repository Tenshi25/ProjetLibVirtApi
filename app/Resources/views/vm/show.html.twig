{% extends 'base.html.twig' %}

{% block body %}
    <h1>Vm</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ vm.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ vm.name }}</td>
            </tr>
            <tr>
                <th>Os</th>
                <td>{{ vm.os }}</td>
            </tr>
            <tr>
                <th>Nbcpu</th>
                <td>{{ vm.nbcpu }}</td>
            </tr>
            <tr>
                <th>Currentcpu</th>
                <td>{{ vm.currentCpu }}</td>
            </tr>
            <tr>
                <th>Currentram</th>
                <td>{{ vm.currentRam }}</td>
            </tr>
            <tr>
                <th>Maxram</th>
                <td>{{ vm.maxRam }}</td>
            </tr>
            <tr>
                <th>Harddisk</th>
                <td>{{ vm.harddisk }}</td>
            </tr>
            <tr>
                <th>Currentharddisk</th>
                <td>{{ vm.currentharddisk }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('vm_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('vm_edit', { 'id': vm.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
