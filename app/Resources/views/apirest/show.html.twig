{% extends 'base.html.twig' %}

{% block body %}
    <h1>Apirest</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ apiRest.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ apiRest.title }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ apiRest.content }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
